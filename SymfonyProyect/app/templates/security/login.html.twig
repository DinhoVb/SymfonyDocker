{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesion{% endblock %}

{% block body %}

<section class="myform-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {% for message in app.flashes('exito') %}
                    <div class="alert alert-success bg-success text-white" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="form-area login-form">
                    <div class="form-content">
                        <h2>Registrar</h2>
                        <p>Sino cuentas con un usuario, dale al boton para que te envie al fomulario de registro !</p>
                        <div class="justify-content-center">
                            <a href="{{ path('registro_index') }}" class="btn btn-warning float-center">Registrar</a>
                        </div>
                    </div>
                    <div class="form-input">
                        <h2>Iniciar Sesion</h2>
                        <form method="post">
                            {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                            {% endif %}
                            {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a
                                    href="{{ path('app_logout') }}">Logout</a>
                            </div>
                            {% endif %}
                            <div class="form-group">
                                <input type="text" id="inputUsername" name="username" value="{{ last_username }}"
                                    autocomplete="username" required autofocus>
                                <label for="inputUsername">Username</label>
                            </div>
                            <div class="form-group">
                                <input type="password" id="inputPassword" name="password"
                                    autocomplete="current-password" required>
                                <label for="inputPassword">password</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="myform-button">
                                <button class="myform-btn" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}