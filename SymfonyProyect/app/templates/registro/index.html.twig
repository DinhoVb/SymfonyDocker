{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}

<section class="myform-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12">
                {# {% for message in app.flashes('error_username') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
                {% endfor %}

                {% for message in app.flashes('error_email') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}
                </div>
                {% endfor %} #}
                <div class="form-error">
                    {{ form_errors(formulario.username) }}
                </div>
                <div class="form-error">
                    {{ form_errors(formulario.email) }}
                </div>
                <div class="form-error">
                    {{ form_errors(formulario.telefono) }}
                </div>
                <div class="form-error">
                    {{ form_errors(formulario.nombre_completo) }}
                </div>


                <div class="form-area login-form">
                    <div class="form-content">
                        <h2>Iniciar Sesion</h2>
                        <p>Si ya cuentas con un usuario, dale al boton para que te envie al fomulario de ingreso !</p>
                        <div class="justify-content-center">
                            <a href="{{ path('app_login') }}" class="btn btn-warning float-center">Iniciar Sesion</a>
                        </div>
                    </div>
                    <div class="form-input">
                        <h2>Crear Usuario</h2>
                        {{ form_start(formulario) }}
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.username) }}
                                    <label for="inputUsername">Username</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.email) }}
                                    <label for="inputEmail">Email</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.nombre_completo) }}
                                    <label for="inputNombre">Nombre Completo</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.direccion) }}
                                    <label for="inputDireccion">Direccion</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.password) }}
                                    <label for="inputPassword">Password</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    {{ form_widget(formulario.telefono) }}
                                    <label for="inputTelefono">Telefono</label>
                                </div>
                            </div>
                        </div>
                        {{ form_widget(formulario._token) }}
                        <div class="myform-button">
                            {{ form_widget(formulario.Registrar, {'attr': {'class': 'myform-btn'}}) }}
                        </div>
                        {{ form_end(formulario) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}